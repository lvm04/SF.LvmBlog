@model LoginRequest


<div class="container">
    <div class="row mt-5">
        <div class="col-3 offset-3">
            <h4>Вход</h4>
            <form asp-action="Login" asp-controller="Account" asp-anti-forgery="true">
                <div class="validation text-danger" asp-validation-summary="ModelOnly"></div>

                <div class="mb-3">
                    <label asp-for="Login" class="form-label">Логин</label> <br />
                    <input type="text" asp-for="Login" class="form-control" />
                    <span asp-validation-for="Login" class="text-danger"> </span>
                </div>
                <div class="mb-3">
                    <label asp-for="Password" class="form-label">Пароль</label> <br />
                    <input type="password" asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input class="btn btn-primary" type="submit" value="Войти" />
                </div>
            </form>
        </div>
    </div>
</div>

@section ValidateScripts {
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
}